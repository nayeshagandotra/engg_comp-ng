{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/glfw-3.4.bin.MACOS/lib-x86_64",
                "${workspaceFolder}/glad/src/glad.c",
                "${workspaceFolder}/PS03-nayeshag/*.cpp",
                "${workspaceFolder}/glfw-3.4.bin.MACOS/lib-x86_64/libglfw.3.dylib",
                "-o",
                "${workspaceFolder}/main.exe",
                "-framework",
                "OpenGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}